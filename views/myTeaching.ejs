<!DOCTYPE html>
<html lang="en" data-user-theme="<%= user ? user.theme : 'light' %>">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>My Teaching</title>

        <!-- Theme Loader - Must be the first script -->
        <script src="/js/themeLoader.js"></script>

        <!-- Bootstrap CSS & Icons -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
            rel="stylesheet"
        />

        <!-- Custom CSS -->
        <link rel="stylesheet" href="/css/navBarStyle.css" />
        <link rel="stylesheet" href="/css/darkMode.css" />
        <style>
            :root {
                --card-bg: #fff;
                --card-border: #e0e0e0;
                --card-shadow: rgba(0, 0, 0, 0.05);
                --text-primary: #212529;
                --text-secondary: #6c757d;
                --accent-color: #ee6c4d;
                --accent-hover: #e95d3c;
                --input-bg: #fff;
                --input-border: #ced4da;
                --icon-color: #6c757d;
                --bg-primary: #ffffff;
            }
            
            body.dark {
                --card-bg: #2d2d2d;
                --card-border: #444;
                --card-shadow: rgba(0, 0, 0, 0.2);
                --text-primary: #f5f5f5;
                --text-secondary: #adb5bd;
                --accent-color: #ee6c4d;
                --accent-hover: #f27d60;
                --input-bg: #212529;
                --input-border: #495057;
                --icon-color: #adb5bd;
                --bg-primary: #121212;
            }
            
            body {
                background-color: var(--bg-primary);
                color: var(--text-primary);
            }

            .course-card {
                border-radius: 12px;
                overflow: hidden;
                transition: transform 0.3s, box-shadow 0.3s;
                margin-bottom: 20px;
                border: 1px solid var(--card-border);
                background-color: var(--card-bg);
            }

            .course-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 16px var(--card-shadow);
            }

            .course-image {
                object-fit: cover;
                width: 100%;
                height: 100%;
                max-height: 180px;
            }

            .learn-now-btn {
                background-color: var(--accent-color);
                color: white;
                border: none;
                border-radius: 20px;
                padding: 8px 20px;
                transition: background-color 0.3s;
            }

            .learn-now-btn:hover {
                background-color: var(--accent-hover);
            }

            .enrolled-header {
                font-weight: 700;
                text-align: center;
                margin: 30px 0;
                font-size: 2rem;
                color: var(--text-primary);
            }

            .search-box {
                position: relative;
                max-width: 300px;
                margin: 0 auto 1.5rem auto;
            }

            .search-box .form-control {
                padding-left: 2.5rem;
                border-radius: 20px;
                background-color: var(--input-bg);
                color: var(--text-primary);
                border-color: var(--input-border);
            }
            
            .search-box .form-control::placeholder {
                color: var(--text-secondary);
            }

            .search-icon {
                position: absolute;
                left: 1rem;
                top: 0.6rem;
                color: var(--icon-color);
            }
            
            .course-title {
                color: var(--text-primary);
            }
            
            .course-description, .course-details, .text-muted {
                color: var(--text-secondary) !important;
            }
            
            .bi-star-fill, .bi-clock {
                color: var(--accent-color);
            }
            
            /* Empty state styling */
            .bi-journal-bookmark {
                color: var(--text-secondary);
            }
            
            /* Upload course button */
            .upload-course-btn {
                border-radius: 50px;
                background-color: var(--accent-color);
                border: none;
                color: white;
            }
            
            .upload-course-btn:hover {
                background-color: var(--accent-hover);
                color: white;
            }
        </style>
    </head>

    <body class="<%= user ? user.theme : 'light' %>" <% if (user && user._id) { %>data-user-id="<%= user._id %>"<% } %>>
        <%- include('partials/navbar') %>

        <div class="container my-5">
            <h1 class="enrolled-header">YOUR TEACHING COURSES</h1>

            <!-- Search Box -->
            <div class="search-box mb-4">
                <i class="bi bi-search search-icon"></i>
                <input
                    type="text"
                    id="courseSearch"
                    class="form-control"
                    placeholder="Search your courses"
                />
            </div>

            <div class="text-end mb-4 d-flex justify-content-center">
                <a
                    href="/courses/create"
                    class="btn btn-primary px-4 py-2 fw-semibold upload-course-btn"
                >
                    <i class="bi bi-plus-circle me-2"></i>Upload New Course
                </a>
            </div>

            <div class="enrolled-courses" id="enrolledCoursesList">
                <% if (enrolledCourses && enrolledCourses.length > 0) { %> <%
                enrolledCourses.forEach(course => { %>
                <div class="course-card p-3">
                    <div class="row g-0 align-items-center">
                        <!-- Image Column -->
                        <div class="col-md-3 pe-md-4">
                            <!-- Add padding end -->
                            <img
                                src="<%= course.image || 'images/course-placeholder.jpg' %>"
                                alt="<%= course.name %>"
                                class="img-fluid rounded-start course-image"
                                style="
                                    max-height: 160px;
                                    width: 100%;
                                    object-fit: cover;
                                "
                            />
                        </div>

                        <!-- Content Column -->
                        <div class="col-md-7">
                            <div class="course-content">
                                <h5 class="course-title mb-1">
                                    <%= course.name %>
                                </h5>

                                <p class="course-description text-muted mb-2">
                                    <%= course.description.substring(0, 100)
                                    %><%= course.description.length > 100 ?
                                    '...' : '' %>
                                </p>
                                <div class="course-details text-muted mb-1">
                                    <i class="bi bi-clock me-2"></i><%=
                                    course.duration || 'N/A' %>
                                </div>
                                <div class="text-muted">
                                    <i class="bi bi-star-fill me-2"></i><%=
                                    course.rating.toFixed(1) %> (<%=
                                    course.reviews?.length || 0 %>)
                                </div>
                            </div>
                        </div>

                        <!-- Button Column -->
                        <div class="col-md-2 text-center">
                            <a
                                href="/courses/<%= course._id %>"
                                class="btn learn-now-btn mt-3"
                                >View</a
                            >
                        </div>
                    </div>
                </div>

                <% }); %> <% } else { %>
                <div class="text-center py-5" id="noCourses">
                    <i class="bi bi-journal-bookmark display-1 text-muted"></i>
                    <h3 class="mt-4">You haven't created any courses yet</h3>
                    <p class="text-muted">
                        Start sharing your knowledge by creating a new course.
                    </p>
                </div>
                <% } %>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            document
                .getElementById("courseSearch")
                .addEventListener("input", function () {
                    const search = this.value.toLowerCase();
                    document
                        .querySelectorAll(".course-card")
                        .forEach((card) => {
                            const title = card
                                .querySelector(".course-title")
                                .textContent.toLowerCase();
                            const description = card
                                .querySelector(".course-description")
                                .textContent.toLowerCase();
                            if (
                                title.includes(search) ||
                                description.includes(search)
                            ) {
                                card.style.display = "";
                            } else {
                                card.style.display = "none";
                            }
                        });
                });
        </script>
    </body>
</html>