<!DOCTYPE html>
<html lang="en">
    <%- include('partials/authentication/headTag', { title: 'forgetPassword',
    stylesheet: 'forgetPassword.css' }) %>
    <body>
        <div class="container-fluid reset-container">
            <div class="reset-form">
                <h3 class="text-center mb-4">Reset password?</h3>

                <!-- Feedback Messages -->
                <% if (typeof error !== "undefined") { %>
                <div class="alert alert-danger" role="alert"><%= error %></div>
                <% } %> <% if (typeof success !== "undefined") { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
                <% } %>

                <!-- Email Submission Form -->
                <form
                    id="forgetForm"
                    action="/auth/forgetPassword"
                    method="POST"
                    novalidate
                >
                    <div class="mb-4">
                        <label for="userEmail" class="form-label"
                            >Email <span class="text-danger">*</span></label
                        >
                        <input
                            type="email"
                            class="form-control"
                            id="userEmail"
                            name="userEmail"
                            placeholder="Your Email"
                        />
                        <div id="emailError" class="text-danger mt-1"></div>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn submit-btn w-100">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/forgetPassword.js"></script>
    </body>
</html>
