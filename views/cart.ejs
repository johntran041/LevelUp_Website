<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <style>
    body {
      background-color: #fff;
    }
    .cart-counter {
      display: flex;
      align-items: center;
      justify-content: center;
      position: absolute;
      top: -8px;
      right: -8px;
      background-color: #ee6c4d;
      color: white;
      border-radius: 50%;
      width: 18px;
      height: 18px;
      font-size: 12px;
      font-weight: bold;
      transition: all 0.3s ease;
    }
    .cart-item {
      box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.1);
      border-radius: 12px;
      margin-bottom: 1.5rem;
    }
    .cart-img {
      width: 80px;
      height: 60px;
      background-color: #ccc;
      border-radius: 8px;
      margin-right: 16px;
    }
    .order-summary {
      border: 1px solid #222;
      padding: 20px;
      border-radius: 12px;
      background-color: #fff;
      position: sticky;
      top: 20px;
    }
    .remove-btn {
      background-color: #333;
      color: #fff;
      border: none;
      padding: 6px 16px;
      border-radius: 6px;
      font-weight: 500;
    }
    .checkout-btn, .continue-btn {
      background-color: #e26d4d;
      color: white;
      font-weight: 600;
      padding: 10px 20px;
      border-radius: 8px;
      border: none;
      width: 100%;
      margin-top: 10px;
      text-decoration: none;
      text-align: center;
      display: inline-block;
    }
    .checkout-btn:hover,
    .continue-btn:hover {
      background-color: #c95535;
    }
    .course-title {
      font-weight: bold;
      font-size: 1rem;
    }
    .course-desc {
      font-size: 0.875rem;
      color: #555;
    }
    .course-price {
      font-weight: bold;
      font-size: 0.95rem;
    }
    .empty-cart {
      text-align: center;
      padding: 60px 20px;
      background-color: #f9f9f9;
      border-radius: 12px;
      margin-bottom: 20px;
    }
    .empty-cart i {
      font-size: 60px;
      color: #ccc;
      margin-bottom: 20px;
    }
    .empty-cart h3 {
      margin-bottom: 20px;
      font-weight: 600;
    }
    .cart-img {
      width: 100px;
      height: 80px;
      border-radius: 8px;
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
   <!-- navbar -->
   <%- include('partials/navbar') %>

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold m-0">Shopping Cart</h2>
      <a href="/courses" class="btn btn-outline-dark fw-semibold">← Continue Shopping</a>
    </div>  
  
    <div class="row">
      <div class="col-lg-8" id="cartContainer">
        <% if (cartItems.length > 0) { %>
          <!-- Course Items -->
          <% cartItems.forEach(course => { %>
            <div class="p-3 bg-white cart-item d-flex justify-content-between align-items-center mb-3" data-course-id="<%= course._id %>">
              <div class="d-flex align-items-center">
                <!-- Wider image -->
                <div 
                  class="cart-img" 
                  style="width: 140px; height: 90px; background-image: url('<%= course.image %>'); background-size: cover; background-position: center; border-radius: 8px;">
                </div>
          
                <div class="ms-3">
                  <div class="fw-bold fs-5"><%= course.name %></div>
          
                  <div class="text-muted mb-1">
                    Created by 
                    <% if (course.author && course.author.firstName && course.author.lastName) { %>
                      <%= course.author.firstName %> <%= course.author.lastName %>
                    <% } else { %>
                      Unknown Instructor
                    <% } %>
                    <% if (course.duration) { %> · <%= course.duration %><% } %>
                  </div>
          
                  <div class="fw-semibold mb-1">$<%= course.price %></div>
                  <div>⭐ <%= course.rating || 0 %></div>
                </div>
              </div>
          
              <form method="POST" action="/cart/remove/<%= course._id %>">
                <button type="submit" class="remove-btn btn btn-outline-danger">Remove</button>
              </form>
            </div>
          <% }) %>
          
          
        <% } else { %>
          <!-- Empty Cart Message -->
          <div class="empty-cart">
            <i class="bi bi-cart-x"></i>
            <h3>Your cart is empty</h3>
            <p>Looks like you haven't added any courses to your cart yet.</p>
            <a href="/courses" class="continue-btn mt-3">Explore Courses</a>
          </div>
        <% } %>
      </div>
      
      <!-- Order Summary only shown when cart has items -->
      <div class="col-lg-4">
        <% if (cartItems.length > 0) { %>
        <!-- inside your order-summary block -->
        <div class="order-summary">
          <h5 class="fw-bold">Order Summary</h5>
          <hr>
          <p>
            Total (<%= cartItems.length %> Courses):
            <strong>
              $<%= cartItems
                    .reduce((sum, c) => sum + (parseFloat(c.price) || 0), 0)
                    .toFixed(2) %>
            </strong>
          </p>
          <a href="/payment/checkout?id=<%= user._id %>" class="checkout-btn">Checkout</a>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <script>
    
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelector('#cartContainer').addEventListener('click', async e => {
        if (!e.target.matches('.remove-btn')) return;
        e.preventDefault();
    
        const itemEl  = e.target.closest('.cart-item');
        const courseId = itemEl.dataset.courseId;
    
        try {
          const resp = await fetch(`/cart/remove/${courseId}`, {
            method: 'POST',
            headers: { 'Accept': 'application/json' }
          });
          const { success, cartCount } = await resp.json();
          if (!success) throw new Error();
    
          // Remove the row
          itemEl.remove();
    
          // Update all cart‐count badges
          document.querySelectorAll('span.badge.bg-danger')
            .forEach(b => b.textContent = cartCount);
    
          // If empty now, show the “empty cart” UI
          if (cartCount === 0) {
            document.querySelector('#cartContainer').innerHTML = `
              <div class="empty-cart">
                <i class="bi bi-cart-x"></i>
                <h3>Your cart is empty</h3>
                <p>Looks like you haven't added any courses to your cart yet.</p>
                <a href="/courses" class="continue-btn mt-3">Explore Courses</a>
              </div>
            `;
            document.querySelector('.order-summary')?.remove();
          }
        } catch (err) {
          console.error('Failed to remove item:', err);
          alert('Could not remove item. Please try again.');
        }
      });
    });
    </script>
    
    
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>